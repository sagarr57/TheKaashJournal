{
  "buildCommand": "cd client && pnpm build",
  "outputDirectory": "client/dist",
  "devCommand": "cd client && pnpm dev",
  "installCommand": "pnpm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/analytics/sync-to-supabase",
      "schedule": "0 2 * * *"
    }
  ]
}
